{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#e06c75",
          "style": "plain",
          "template": "{{.UserName}}",
          "type": "text"
        },
        {
          "foreground": "#abb2bf",
          "style": "plain",
          "template": "\u279c",
          "type": "text"
        },
        {
          "foreground": "#98c379",
          "properties": {
            "style": "folder"
          },
          "style": "plain",
          "template": "{{.Folder}}",
          "type": "path"
        },
        {
          "foreground": "#D0666F",
          "properties": {
            "branch_icon": "îœ‰"
          },
          "style": "plain",
          "template": "<#5FAAE8>(</>{{.HEAD}}<#5FAAE8>)</>",
          "type": "git"
        },
        {
          "foreground": "#BF616A",
          "style": "plain",
          "template": "\u2717",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
